{
  "name": "@rewindui/rewindui-core",
  "version": "0.6.0",
  "description": "RewindUI Core",
  "keywords": [
    "rewindui",
    "react",
    "ui",
    "components",
    "tailwindcss",
    "typescript",
    "javascript",
    "framework"
  ],
  "author": "Nick Dunas",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest run"
  },
  "devDependencies": {
    "@rewindui/tsconfig": "workspace:*",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "eslint": "^8.15.0",
    "happy-dom": "^8.9.0",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.28.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@floating-ui/react": "^0.21.1",
    "@floating-ui/react-dom": "^1.3.0",
    "@tabler/icons": "^2.5.0",
    "@tailwindcss/forms": "^0.5.3",
    "class-variance-authority": "^0.4.0",
    "react-merge-refs": "^2.0.1",
    "tailwind-merge": "^1.10.0",
    "tailwind-scrollbar": "^2.0.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
